{% extends 'base.html.twig' %}

{% block main %}

    <section class="jumbotron text-center">
        <div class="container">
            {% if videos %}
                <h1 class="jumbotron-heading">Search results</h1>
                <div class="form-row align-items-center ml-3">
                    {{ include('front/includes/_sort.html.twig') }}
                </div>
            {% else %}
                <h1 class="jumbotron-heading">No results were found</h1>
            {% endif %}
        </div>
    </section>

    {% if videos %}
        {{ include('front/includes/_videos.html.twig', {
            'videos': videos
        }) }}
    {% endif %}

{% endblock %}
